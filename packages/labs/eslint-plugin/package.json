{
  "name": "eslint-plugin-ts-lit",
  "version": "0.1.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "An ESLint-Typescript plugin for Lit",
  "license": "BSD-3-Clause",
  "author": "Google LLC",
  "homepage": "https://github.com/lit/lit/tree/main/packages/labs/eslint-plugin-ts-lit",
  "repository": {
    "type": "git",
    "url": "https://github.com/lit/lit.git",
    "directory": "packages/labs/eslint-plugin-ts-lit"
  },
  "main": "index.js",
  "scripts": {
    "build": "wireit",
    "test": "wireit"
  },
  "wireit": {
    "build": {
      "command": "tsc --build --pretty",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "lib",
        "test",
        "index.{js,js.map,d.ts,d.ts.map}",
        "tsconfig.tsbuildinfo"
      ],
      "clean": "if-file-deleted"
    },
    "test": {
      "#comment": "The quotes around the file regex must be double quotes on windows!",
      "command": "uvu test \"_test\\.js$\"",
      "dependencies": [
        "build"
      ],
      "files": [
        "test-files/"
      ],
      "output": []
    }
  },
  "files": [
    "/src/",
    "!/src/test/",
    "/lib/",
    "!/lib/.tsbuildinfo"
  ],
  "dependencies": {
    "@lit-labs/analyzer": "^0.2.0",
    "@typescript-eslint/utils": "^5.30.0",
    "typescript": "~4.6.2"
  },
  "devDependencies": {
    "@types/node": "^16.7.8",
    "uvu": "^0.5.1"
  }
}
