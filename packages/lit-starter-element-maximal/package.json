{
  "name": "lit-starter-element-maximal",
  "version": "1.0.0",
  "description": "A Maximal Lit Element starter kit",
  "type": "module",
  "main": "lib/my-element.js",
  "module": "lib/my-element.js",
  "scripts": {
    "build": "wireit",
    "serve": "wireit",
    "dev": "npm run serve & npm run build --watch",
    "test": "wireit",
    "lint": "wireit",
    "format": "wireit",
    "build:ts": "wireit",
    "build:cem": "wireit",
    "build:docs": "wireit",
    "build:docs:eleventy": "wireit",
    "build:docs:bundle": "wireit",
    "lint:lit-analyzer": "wireit",
    "lint:eslint": "wireit"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:ts",
        "build:docs"
      ]
    },
    "build:ts": {
      "command": "tsc --build --pretty",
      "clean": "if-file-deleted",
      "files": [
        "src/**/*.ts",
        "tsconfig.json",
        ".tsbuildinfo"
      ],
      "output": [
        "demo/**/*.js",
        "demo/**/*.js.map",
        "demo/**/*.d.ts",
        "demo/**/*.d.ts.map",
        "test/**/*",
        "lib/**/*"
      ]
    },
    "build:cem": {
      "command": "cem analyze --globs src/lib/**/*.ts --litelement",
      "files": [
        "src/lib/**/*.ts"
      ],
      "output": [
        "custom-elements.json"
      ],
      "dependencies": []
    },
    "serve": {
      "command": "wds --node-resolve -w",
      "files": [
        "lib/**/*.ts",
        "index.html",
        "demo/**/*"
      ],
      "dependencies": [
        "build"
      ]
    },
    "test": {
      "command": "wtr",
      "files": [
        "lib/**/*",
        "test/**/*"
      ],
      "dependencies": [
        "build:ts"
      ]
    },
    "lint": {
      "dependencies": [
        "lint:lit-analyzer",
        "lint:eslint"
      ]
    },
    "lint:lit-analyzer": {
      "command": "lit-analyzer 'src/lib/**/*.ts' 'src/test/**/*.ts'",
      "files": [
        "src/lib/**/*.ts",
        "src/test/**/*.ts"
      ],
      "dependencies": []
    },
    "lint:eslint": {
      "command": "eslint 'src/lib/**/*.ts' 'src/test/**/*.ts'",
      "files": [
        "src/lib/**/*.ts",
        "src/test/**/*.ts"
      ]
    },
    "format": {
      "command": "prettier \"src/**/*.{cjs,html,js,json,md,ts}\" --ignore-path ./.eslintignore --write",
      "clean": false,
      "files": [
        "src/**/*.{cjs,html,js,json,md,ts}"
      ],
      "output": [
        "src/**/*.{cjs,html,js,json,md,ts}"
      ]
    },
    "build:docs": {
      "dependencies": [
        "build:docs:eleventy",
        "build:docs:bundle"
      ]
    },
    "build:docs:eleventy": {
      "command": "eleventy --config=.eleventy.cjs",
      "files": [
        "docs-src/!(src)/*",
        "docs-src/!(esbuild.config.mjs)",
        ".eleventy.cjs"
      ],
      "output": [
        "docs/!(build)/**/*",
        "docs/!(build)"
      ],
      "dependencies": [
        "build:cem"
      ]
    },
    "build:docs:bundle": {
      "command": "node docs-src/esbuild.config.mjs",
      "files": [
        "docs-src/src/**/*",
        "docs-src/esbuild.config.mjs",
        "src/lib/**/*.ts"
      ],
      "output": [
        "docs/build/**/*"
      ],
      "clean": "if-file-deleted"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lit/lit-starter-element-maximal.git"
  },
  "keywords": [
    "web-components",
    "lit-element",
    "javascript",
    "lit"
  ],
  "author": "Google LLC",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/lit/lit-starter-element-maximal/issues"
  },
  "homepage": "https://github.com/lit/lit-starter-element-maximal#readme",
  "dependencies": {
    "lit": "^2.2.6",
    "tslib": "^2.4.0"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.0.0",
    "@custom-elements-manifest/analyzer": "^0.6.3",
    "@open-wc/testing": "^3.1.6",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "@web/dev-server": "^0.1.32",
    "@web/test-runner": "^0.13.31",
    "@web/test-runner-playwright": "^0.8.9",
    "api-viewer-element": "^1.0.0-pre.3",
    "esbuild": "^0.14.47",
    "esbuild-plugin-minify-html-literals": "^1.0.1",
    "eslint": "^8.18.0",
    "lit-analyzer": "^2.0.0-pre.2",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4",
    "wireit": "^0.7.0"
  },
  "exports": {
    ".": {
      "default": "./lib/my-element.js"
    },
    "./lib/my-element.js": {
      "default": "./lib/my-element.js"
    }
  }
}
